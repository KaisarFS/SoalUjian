<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".DetailFavourite">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/cardData"
        android:elevation="10dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15px"
            android:background="@color/colorAccent"
            android:paddingBottom="15px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:background="@color/colorAccent"
                        app:cardBackgroundColor="@color/colorAccent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/teamBadgesDetailFav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorAccent"
                                android:src="@mipmap/ic_launcher_round" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teamNAmeDetailFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name : placeholder"
                        android:textColor="#14B7DC"
                        android:textSize="60px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/teamGenderDetailFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="alternate name"
                        android:textSize="42px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/teamCountryDetailFav"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tahun"
                            android:textColor="@color/colorWhite"
                            android:textSize="30px" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=", "
                            android:textSize="30px" />

                        <TextView
                            android:id="@+id/formedYearFav"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2020"
                            android:textColor="@color/colorWhite"
                            android:textSize="30px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="40px"
        android:layout_marginStart="40px"
        android:layout_marginEnd="40px"
        android:layout_width="match_parent"
        android:layout_height="500px"
        app:cardElevation="30dp"
        app:cardCornerRadius="20dp">
        <TextView
            android:scrollbars="vertical"
            android:id="@+id/teamDescFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description : "
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:padding="15dp"
            tools:text="@tools:sample/lorem/random"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>